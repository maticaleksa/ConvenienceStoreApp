<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:defaultNavHost="true" />

    <TextView
        android:id="@+id/no_internet_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:text="@string/no_internet"
        android:textColor="@color/warning_text"
        android:textSize="12sp"
        android:visibility="gone" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_nav_background"
        android:paddingTop="@dimen/spacing_4"
        android:paddingBottom="@dimen/spacing_8"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemIconSize="22dp"
        app:itemRippleColor="@color/bottom_nav_ripple"
        app:itemTextAppearanceActive="@style/TextAppearance.ConvenienceStore.BottomNavLabel"
        app:itemTextAppearanceInactive="@style/TextAppearance.ConvenienceStore.BottomNavLabel"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
