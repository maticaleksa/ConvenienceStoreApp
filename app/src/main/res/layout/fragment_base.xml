<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/base_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/base_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:contentInsetStart="@dimen/spacing_16"
            app:contentInsetStartWithNavigation="@dimen/spacing_16"
            app:titleMarginTop="@dimen/spacing_8"
            app:titleMarginBottom="@dimen/spacing_8"
            app:titleTextAppearance="@style/TextAppearance.ConvenienceStore.ToolbarTitle" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/base_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
