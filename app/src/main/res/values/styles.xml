<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.ConvenienceStore.ScreenTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ConvenienceStore.SectionTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.ConvenienceStore.SearchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/bottom_nav_item_unselected</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="startIconTint">@color/bottom_nav_item_unselected</item>
        <item name="hintTextColor">@color/text_input_hint_color</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_12</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_12</item>
    </style>

    <style name="Widget.ConvenienceStore.SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingStart">@dimen/spacing_12</item>
        <item name="android:paddingEnd">@dimen/spacing_12</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
    </style>

    <style name="Widget.ConvenienceStore.SearchAutoComplete" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingStart">@dimen/spacing_12</item>
        <item name="android:paddingEnd">@dimen/spacing_12</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
    </style>
</resources>
